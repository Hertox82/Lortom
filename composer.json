{
    "name": "hadeluca/lortom",
    "description": "Lortom is a CMS based on Laravel Framework, The Backend was built with Angular 6",
    "keywords": [
        "cms",
        "laravel",
        "angular6",
        "laravel plus angular",
        "angular 6"
    ],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Hernan Ariel De Luca",
            "email": "hadeluca@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "fideloper/proxy": "~3.3",
        "hadeluca/db-exporter": "^2.0",
        "hadeluca/lortom-framework": "1.0.*",
        "laravel/framework": "5.5.*",
        "laravel/tinker": "~1.0"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds"
        ],
        "psr-4": {
            "App\\": "app/",
            "Plugins\\": "angular-backend/src/plugins/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "hadeluca/db-exporter"
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"file_exists('ltpm.config.json') || copy('ltpm.config.json.example', 'ltpm.config.json');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate",
            "@php artisan lt-setup:init"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "minimum-stability": "stable",
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "prefer-stable": true
}
